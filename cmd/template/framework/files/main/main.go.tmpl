package main

import (
	"fmt"
	"log/slog"
	"os"
	"{{.ProjectName}}/internal/logger"
	"{{.ProjectName}}/internal/server"
)

func main() {
	loggerConfig := logger.LoggerConfig{
		LoggerType: "text",
		Level:      slog.LevelInfo,
		AddSource:  true,
	}

	logger, err := logger.New(loggerConfig)
	if err != nil {
		logger.Fatal(fmt.Sprintf("cannot create logger: %s", err))
	}

	server := server.NewServer()
	logger.Info(fmt.Sprintf("server is starting on port %s", os.Getenv("PORT")))
	err = server.ListenAndServe()
	if err != nil {
		logger.Fatal(fmt.Sprintf("cannot start server: %s", err))
	}
}