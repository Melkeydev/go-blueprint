	r.Use(middleware.Logger)

	r.Get("/", s.HelloWorldHandler)
  {{if ne .DBDriver "none"}}
	r.Get("/health", s.healthHandler)
  {{end}}
  {{if .AdvancedOptions.Websocket}}
	r.Get("/websocket", s.websocketHandler)
  {{end}}
